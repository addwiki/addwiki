{
    "name": "addwiki/mediawiki-sitematrix-api",
    "type": "library",
    "description": "MediaWiki API library for the Sitematrix extension",
    "keywords": ["Mediawiki", "API"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Addshore"
        }
    ],
    "scripts": {
        "lint": "parallel-lint . --exclude vendor",
        "phpcs": "phpcs -ps",
        "fix": "phpcbf",
        "phpunit": "phpunit tests",
        "phpunit-unit": "phpunit tests/unit",
        "phpunit-integration": "phpunit tests/integration",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit"
        ]
    },
    "require": {
        "php": ">=7.3",
        "addwiki/mediawiki-api-base": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "mediawiki/mediawiki-codesniffer": "~35.0"
    },
    "autoload": {
        "psr-4": {
            "Addwiki\\Mediawiki\\Ext\\Sitematrix\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "3.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
