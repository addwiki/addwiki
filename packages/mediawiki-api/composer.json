{
    "name": "addwiki/mediawiki-api",
    "type": "library",
    "description": "A MediaWiki API library",
    "keywords": ["Mediawiki", "API"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Addshore"
        }
    ],
    "scripts": {
        "lint": "parallel-lint . --exclude vendor",
        "phpcs": "phpcs -ps",
        "fix": "phpcbf",
        "phpunit": "phpunit tests",
        "phpunit-unit": "phpunit tests/unit",
        "phpunit-integration": "phpunit tests/integration",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit"
        ]
    },
    "require": {
        "addwiki/mediawiki-api-base": "^2.7",
        "addwiki/mediawiki-datamodel": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "mediawiki/mediawiki-codesniffer": "~35.0",
        "monolog/monolog": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Mediawiki\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mediawiki\\Api\\Test\\": [
                "tests/integration",
                "tests/unit"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.7-dev",
            "dev-master": "2.7-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
