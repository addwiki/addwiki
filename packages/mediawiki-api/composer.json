{
    "name": "addwiki/mediawiki-api",
    "type": "library",
    "description": "A MediaWiki API library",
    "keywords": ["Mediawiki"],
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Addshore"
        }
    ],
    "require": {
        "addwiki/mediawiki-api-base": "^2.6",
        "addwiki/mediawiki-datamodel": "^2.6"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "mediawiki/mediawiki-codesniffer": "~22.0",
        "monolog/monolog": "^1.23",
        "phpunit/phpunit": "~8"
    },
    "autoload": {
        "psr-4": {
            "Mediawiki\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mediawiki\\Api\\Test\\": [
                "tests/integration",
                "tests/unit"
            ]
        }
    },
    "scripts": {
        "lint": "parallel-lint . --exclude vendor",
        "phpcs": "phpcs -ps",
        "fix": "phpcbf",
        "phpunit": "phpunit",
        "phpunit-coverage": "phpunit --coverage-clover=coverage.clover",
        "phpunit-integration": "phpunit --testsuite integration",
        "phpunit-unit": "phpunit --testsuite unit",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.6-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
